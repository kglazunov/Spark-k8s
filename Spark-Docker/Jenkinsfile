node('kuber') {
    stage 'Checkout from Github'
        checkout scm
    stage 'Create namespace Spark and nfs share'
        sh "kubectl create -f /home/jenkins/workspace/testing/Spark-Docker/namespace-spark.json;kubectl create -f /home/jenkins/workspace/testing/Spark-Docker/nfs-pv-pvc-spark.yml"
    stage 'Create pods for the Spark Cluster'
    sleep(time:10,unit:"SECONDS")
        sh 'kubectl create -f /home/jenkins/workspace/testing/Spark-Docker/export --namespace=spark'
    stage 'Running Py.py script'
        sh "py.py"
    stage 'Remove Spark deployments,configmaps and etc'
        sh 'kubectl delete deployments.extensions spark-master spark-worker-1 spark-worker-2 spark-worker-3;kubectl delete configmaps spark-worker-1-env-spark-worker-sh spark-worker-2-env-spark-worker-sh spark-worker-3-env-spark-worker-sh;kubectl delete services spark-master spark-worker-1 spark-worker-2 spark-worker-3'
	stage 'Remove pv'
	    sh 'kubectl delete pv nfs-docker-spark'
	stage 'Remove Spark namespace'
	    sh 'kubectl delete namespace spark'
}
